function sumOfN(n) {
  let arr = [];
  let sum = 0;
  if (n > 0) {
    for (let i = 0; i <= n; i++) {
      arr.push(sum += i);
    } 
  } else {
      for (let i = 0; i <= -n; i++) {
      arr.push(sum += -i);
    }
  }
  return arr;
}
