function longest(s1, s2) {
  let s3 = s1 + s2;
  let arr = [];
  for (let i = 0; i < s3.length; i++) {
    if (i === s3.indexOf(s3[i])) {
      arr.push(s3[i]);
    }
  }
  return arr.sort().join('');
} 
 
